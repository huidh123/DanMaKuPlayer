<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_header_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="请输入AV号:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_av_num_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header_lable"
        android:layout_margin="4dp"
        android:hint="请输入你想看的AV号吧"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_vedio_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_open_plugs"
        android:layout_below="@+id/et_av_num_input"
        android:padding="8dp"
        android:text=""
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_open_plugs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_above="@+id/btn_play_start"
        android:text="开启/关闭辅助插件"
        android:textColor="@color/white_FFFFFF"
        android:textSize="18sp" />
    
    <Button
        android:id="@+id/btn_play_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        android:text="开始播放"
        android:textColor="@color/white_FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>